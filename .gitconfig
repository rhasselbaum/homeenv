[user]
	name = Rob Hasselbaum
	email = rob@hasselbaum.net
[core]
	editor = vim
	pager = less -FMRiX
[merge]
	tool = kdiff3
[push]
	default = simple
[pull]
	rebase = true
[alias]
	lg = log --decorate --graph --oneline
	dag = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)\"%an\" <%ae>%C(reset) %C(magenta)%cr%C(reset)%C(auto)%d%C(reset)%n%s' --date-order
[color]
	ui = auto
